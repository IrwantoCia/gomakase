package domain

import (
	"time"
)

type Provider string

const (
	ProviderTelegram Provider = "telegram"
	ProviderWeb      Provider = "web"
)

type Auth struct {
	AuthID    string
	UserID    string
	Provider  string
	Token     string
	ExpiresAt time.Time
	CreatedAt time.Time
}

func NewAuth(
	authID string,
	userID string,
	token string,
	provider Provider,
	expiresAt time.Time,
) (*Auth, error) {
	if userID == "" {
		return nil, ErrUserIDRequired
	}

	if token == "" {
		return nil, ErrTokenRequired
	}

	if expiresAt.IsZero() {
		return nil, ErrExpiresAtRequired
	}

	user := &Auth{
		AuthID:    authID,
		UserID:    userID,
		Token:     token,
		Provider:  provider,
		ExpiresAt: expiresAt,
		CreatedAt: time.Now(),
	}

	return user, nil
}
