{{define "head"}}
    <title>Gomakase - Go Omakase: Your Project, Perfectly Structured</title>
{{end}}

{{define "content"}}
        <!-- Hero Section -->
        <div class="hero py-24 bg-base-100">
            <div class="hero-content text-center">
                <div class="max-w-4xl">
                    <h1 class="text-5xl font-bold text-primary">
                        Go Omakase: Your Project, Perfectly Structured.
                    </h1>
                    <p class="mt-4 text-lg text-base-content/80 max-w-lg mx-auto">
                        Gomakase is a CLI tool that instantly scaffolds a new Go project using Domain-Driven Design principles. Stop debating folder structure and start building your application.
                    </p>
                </div>
            </div>
        </div>

        <!-- Call to Action Section -->
        <div class="container mx-auto px-4 pb-16">
            <div class="bg-base-200 p-8 rounded-box shadow border-t-4 border-[hsl(var(--a))]">
                <h3 class="text-2xl font-bold text-base-content text-center mb-6">Get Started in Seconds</h3>
                <div class="flex flex-col lg:flex-row gap-4 justify-center items-center">
                    <div class="mockup-code bg-base-100">
                        <pre data-prefix="$" class="whitespace-pre-wrap"><code>go install github.com/your-username/gomakase@latest</code></pre>
                    </div>
                    <div class="mockup-code bg-base-200">
                        <pre data-prefix="$"><code>gomakase new your-project-name</code></pre>
                    </div>
                </div>
            </div>
        </div>

        <!-- Proof / Example Output Section -->
        <div class="py-16 bg-base-200">
            <div class="container mx-auto px-4">
                <h2 class="text-3xl font-bold text-base-content text-center mb-8">Example Output</h2>
                <div class="flex justify-center">
                    <div class="mockup-code bg-base-100">
                        <pre data-prefix=""><code>your-project-name/
├── cmd/
│   └── server/
│       └── main.go
├── internal/
│   ├── application/
│   ├── domain/
│   └── infrastructure/
├── pkg/
└── go.mod</code></pre>
                    </div>
                </div>
            </div>
        </div>

        <!-- Features Section -->
        <div class="py-24 bg-base-100">
            <div class="container mx-auto px-4">
                <div class="flex flex-col lg:flex-row gap-12 items-center">
                    <!-- Column 1: Text Content -->
                    <div class="flex-1">
                        <h2 class="text-4xl font-bold text-base-content mb-6">Authentication Included</h2>
                        <p class="text-lg text-base-content/70 max-w-md">
                            Generate a project with a complete, secure login and registration flow already built-in. Skip the setup and focus on your core features.
                        </p>
                    </div>
                    
                    <!-- Column 2: Visual Demo -->
                    <div class="flex-1 flex justify-center">
                        <div class="card bg-base-100 shadow-xl w-full max-w-sm">
                            <div class="card-body">
                                <div class="form-control">
                                    <label class="label">
                                        <span class="label-text font-medium">Email address</span>
                                    </label>
                                    <input type="text" class="input input-bordered" placeholder="Enter your email" />
                                </div>
                                
                                <div class="form-control mt-4">
                                    <label class="label">
                                        <span class="label-text font-medium">Password</span>
                                    </label>
                                    <input type="password" class="input input-bordered" placeholder="Enter your password" />
                                </div>
                                
                                <div class="form-control mt-6">
                                    <button class="btn btn-primary w-full">Sign In</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
{{end}}