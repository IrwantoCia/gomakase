<!doctype html>
<html data-theme="gomakase-theme" lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="/static/css/output.css">
        <script src="/static/js/api.js"></script>
        <title>{{.title}} - gomakase</title>
        {{template "head" .}}
    </head>

    <body class="min-h-screen flex flex-col">
        <!-- Toast Notification System -->
        <div class="toast toast-top toast-end">
            <!-- Success Alert -->
            <div class="alert alert-success hidden" id="success-alert">
                <svg class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <span id="success-message">Operation completed successfully!</span>
            </div>
            
            <!-- Error Alert -->
            <div class="alert alert-error hidden" id="error-alert">
                <svg class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <span id="error-message">Something went wrong!</span>
            </div>
            
            <!-- Warning Alert -->
            <div class="alert alert-warning hidden" id="warning-alert">
                <svg class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.34 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                </svg>
                <span id="warning-message">Please check your input!</span>
            </div>
        </div>

        <!-- Header (Navbar) -->
        <header class="navbar bg-base-100 shadow-sm">
            <div class="navbar-start">
                {{if .user}}
                <a href="/dashboard" class="btn btn-ghost text-xl text-primary">
                    gomakase
                </a>
                <a href="/" class="btn btn-ghost text-xl text-primary">
                    gomakase
                </a>
                {{else}}
                {{end}}
            </div>
            <div class="navbar-center">
                <!-- Empty center section -->
            </div>
            {{if .user}}
            <div class="navbar-end">
                <div class="dropdown dropdown-end">
                    <div tabindex="0" role="button" class="btn btn-ghost btn-circle avatar">
                        <div class="w-10 rounded-full bg-primary/20 !flex items-center justify-center">
                            <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                            </svg>
                        </div>
                    </div>
                    <ul tabindex="0" class="mt-3 z-[1] p-2 shadow menu menu-sm dropdown-content bg-base-100 rounded-box w-52">
                        <li><a class="justify-between font-medium">Profile <span class="badge">New</span></a></li>
                        <li><a class="text-base-content/70">Settings</a></li>
                        <li><a id="logout" class="text-error flex items-center">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                            </svg>
                            Logout
                        </a></li>
                    </ul>
                </div>
            </div>
            {{end}}
        </header>

        <!-- Main Content Area -->
        <main class="flex-1">
            {{template "content" .}}
        </main>

        <!-- Footer -->
        <footer class="footer footer-center p-10 bg-base-200 text-base-content">
            <div>
                <p>Â© 2025 Gomakase - All rights reserved</p>
            </div>
        </footer>

        <!-- JavaScript for Toast Notification Management -->
        <script>
            // Utility functions for showing/hiding toast notifications
            function showAlert(type, message) {
                const alertElement = document.getElementById(type + '-alert');
                const messageElement = document.getElementById(type + '-message');
                if (alertElement && messageElement) {
                    messageElement.textContent = message;
                    alertElement.classList.remove('hidden');
                    // Auto-hide after 5 seconds
                    setTimeout(() => {
                        alertElement.classList.add('hidden');
                    }, 5000);
                }
            }

            function hideAlert(type) {
                const alertElement = document.getElementById(type + '-alert');
                if (alertElement) {
                    alertElement.classList.add('hidden');
                }
            }

            // Close alert on click
            document.addEventListener('click', function(e) {
                if (e.target.closest('.alert')) {
                    e.target.closest('.alert').classList.add('hidden');
                }
            });

            // Logout
            document.getElementById('logout')?.addEventListener('click', async function(e) {
                try {
                    e.preventDefault();
                    const data = await logout();
                    if (data.success) {
                        showAlert('success', 'Logged out successfully');
                        setTimeout(() => {
                            window.location.href = '/login';
                        }, 1500);
                    } else {
                            showAlert('error', data.error);
                        }
                } catch (error) {
                    showAlert('error', error);
                }
            });
        </script>
    </body>
</html>
