{{define "head"}}
    <title>Login - Gomakase</title>
{{end}}

{{define "content"}}
<div class="flex flex-col items-center justify-center py-16">
    <!-- Login Card -->
    <div class="card w-full max-w-sm shadow-2xl bg-base-200">
        <div class="card-body">
            <h1 class="text-2xl font-bold text-center mb-6">Sign In</h1>
            
            <form class="space-y-4" id="login-form">
                <!-- Email Field -->
                <div class="form-control">
                    <label class="label">
                        <span class="label-text font-medium">Email</span>
                    </label>
                    <div class="relative">
                        <svg class="absolute left-3 top-1/2 transform -translate-y-1/2 w-5 h-5 text-base-content/50 pointer-events-none" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                        </svg>
                        <input autocomplete="email" type="email" class="input input-bordered w-full pl-10" placeholder="Enter your email" required />
                    </div>
                </div>
                
                <!-- Password Field -->
                <div class="form-control">
                    <label class="label">
                        <span class="label-text font-medium">Password</span>
                        <a href="/forgot-password" class="label-text-alt link link-hover">Forgot password?</a>
                    </label>
                    <div class="relative">
                        <svg class="absolute left-3 top-1/2 transform -translate-y-1/2 w-5 h-5 text-base-content/50 pointer-events-none" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                        </svg>
                        <input autocomplete="current-password" type="password" class="input input-bordered w-full pl-10" placeholder="Enter your password" required />
                    </div>
                </div>
                
                <!-- Sign In Button -->
                <div class="form-control mt-6">
                    <button type="submit" class="btn btn-primary w-full">Sign In</button>
                </div>
            </form>
        </div>
    </div>
    
    <!-- Sign Up Link -->
    <div class="text-center mt-6">
        <p class="text-base-content/70">
            Don't have an account? 
            <a href="/register" class="link link-hover">Sign up</a>
        </p>
    </div>
</div>
<script>
    document.getElementById('login-form').addEventListener('submit', async function(e) {
        try {
            e.preventDefault();
            const email = document.querySelector('input[type="email"]').value;
            const password = document.querySelector('input[type="password"]').value;
            const data = await login(email, password);
            if (data.success) {
                showAlert('success', 'Login successful');
                setTimeout(() => {
                    window.location.href = '/dashboard';
                }, 1500);
            } else {
                    showAlert('error', data.error);
                }
        } catch (error) {
            showAlert('error', error);
        }
    });
</script>
{{end}}
